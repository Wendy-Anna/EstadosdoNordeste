<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.wendy.estadosdonordeste.MainActivity">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">
            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Estados do Nordeste"
                android:textColor="#000000"
                android:typeface="serif"
                android:textSize="25dp"
                android:layout_marginTop="25dp"
                android:layout_gravity="center_horizontal"
                android:textStyle="italic" />
            <ImageView
                android:layout_width="86dp"
                android:layout_height="114dp"
                android:id="@+id/imageView"
                android:layout_gravity="right"
                android:src="@drawable/icone"
                android:layout_marginTop="-90dp" />
            <Button
                android:id="@+id/botao1"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="83dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/bahia"
                android:text="Bahia"
                android:textAllCaps="false"
                android:textSize="35sp"
                android:layout_weight="0.92"
                android:onClick="clickbotao"
                android:gravity="fill_vertical"
                android:focusable="false"
                android:clickable="false"
                android:allowUndo="false"
                android:contextClickable="false"
                android:textStyle="italic"
                android:typeface="serif"
                android:singleLine="false" />
            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-20dp" />
            <Button
                android:id="@+id/botao2"
                android:layout_width="match_parent"
                android:layout_height="83dp"
                android:layout_marginTop="2dp"
                android:textColor="#000000"
                android:background="@drawable/ceara"
                android:text="Ceara"
                android:textAllCaps="false"
                android:textSize="35sp"
                android:layout_weight="0.92"
                android:gravity="fill_vertical"
                android:typeface="serif"
                android:textStyle="italic" />
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-20dp" />
            <Button
                android:id="@+id/botao3"
                android:layout_width="match_parent"
                android:layout_height="83dp"
                android:textColor="#000000"
                android:layout_marginTop="2dp"
                android:background="@drawable/paraiba"
                android:text="Paraiba"
                android:textAllCaps="false"
                android:textSize="35sp"
                android:layout_weight="0.92"
                android:gravity="fill_vertical"
                android:typeface="serif" />,
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/botao4"
                android:layout_width="match_parent"
                android:layout_height="83dp"
                android:textColor="#000000"
                android:layout_marginTop="-20dp"
                android:background="@drawable/pernambuco"
                android:text="Pernambuco"
                android:textAllCaps="false"
                android:textSize="35sp"
                android:layout_weight="0.33"
                android:gravity="fill_vertical"
                android:typeface="serif" />
            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/botao5"
                android:layout_width="match_parent"
                android:layout_height="83dp"
                android:layout_marginTop="-20dp"
                android:background="@drawable/rn"
                android:text="Rio Grande do Norte"
                android:textColor="#000000"
                android:textAllCaps="false"
                android:textSize="35sp"
                android:layout_weight="0.33"
                android:gravity="fill_vertical"
                android:typeface="serif" />
            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView5"
                android:textColor="#000000"
                android:textSize="15dp"
                android:layout_marginTop="2dp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
